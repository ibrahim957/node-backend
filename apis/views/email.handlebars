        }

        footer .policies a {
            display: block;
            text-decoration: none;
            font-size: 16px;
            letter-spacing: 0px;
            color: #1A1818;
            opacity: 1;
        }

        footer .social {
            display: block;
            position: absolute;
            bottom: -10px;
            right: 0px;
        }

    </style>

