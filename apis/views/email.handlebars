            text-align: left;
            letter-spacing: 0px;
            color: #1A1818;
            word-wrap: break-word;
            opacity: 1;
        }

        /* Footer Section */

        footer {
            position: relative;
        }

        footer p {
            font-size: 16px;
            text-align: left;
            letter-spacing: 0px;
        }

        footer a {
            font-size: 16px;
            text-align: left;
            letter-spacing: 0px;
            text-decoration: none;
            color: #818386;
        }

        footer .policies {
